<html>
    <body>
      <h1>{{heading}}</h1>
      <p>About</p>
      <form method="POST" action="../api/users/login">
        <label htmlFor="email">Email</label>
                <input
                    ref={register}
                    id="email"
                    name="email"
                    type="email"
                    required={true}
                />
                <label htmlFor="password">Password</label>
                <input
                    ref={register}
                    id="password"
                    name="password"
                    type="password"
                    required={true}
                />
                <button type='submit'>Log In</button>
      </form>
      Don't have an account? <a href="./signup">sign up</a>
    </body>
</html>